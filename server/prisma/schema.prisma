////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

model DeviceAccount {
  deviceID String
  accountID String
  version Int @default(0)
  @@id([deviceID, accountID])
}

model DeviceProfile {
  deviceID String
  profileID String
  version Int @default(0)
  @@id([deviceID, profileID])
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

model Account {
  id String @id @default(cuid())
  name String
  email String @unique
  password String
  profiles Profile[]
}

model Profile {
  id String @id @default(cuid())
  name String
  username String @unique
  password String
  accountID String
  account Account @relation(fields: [accountID], references: [id], onDelete: Cascade)
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
